			<main class="content">
				
					<button type="button" class="button" id="yes">Modificar meta</button>
					<button type="button" class="button" id="next">Proxima meta</button>
				
				<div class="popup" id="adPanel">
					<form class="container" action="/metas" method="post">
					  <h1>Modificar Meta</h1>
					
					  <label for="number"><b>Nome da meta</b></label>
					  <input type="text" placeholder="Enter Account Number"  id="accnumb" name="nome">
					
					  <label for="tipo"><b>Valor (- para gasto)</b></label>
					  <input type="text" placeholder="Enter Account Type"  id="acctype" name="valor">
										
					  <button type="submit" class="button" id="yes">Mudar</button>
					  <button type="button" class="button" id="no">Close</button>
					</form>
					</div>

					<h1 style="text-align: center;" > <span id="myText"  ></span></h1>
				<div id="Progress_Status">
					<div id="myprogressBar"></div>
				  </div>
			</main>
		</div>
	</div>

	<script src="js/app.js"></script>

</body>

<script>
	let dados = " <%= aux  %>";
	let i=2
	dados = dados.split(",")
	document.getElementById("myText").innerHTML = dados[0];
	var element = document.getElementById("myprogressBar");   
	var x = dados[1];
	element.style.width = x + '%'; 
	element.innerHTML = x * 1  + '%';


	var botão = document.getElementById("yes")
	var pop = document.getElementById("adPanel")
	botão.addEventListener('click',function(){
		pop.style.display = "block";
	})

	var fecha = document.getElementById("no")
	fecha.addEventListener('click',function(){
		pop.style.display = "none";
	})

	var proximo = document.getElementById("next")
	proximo.addEventListener('click',function(){

		if(i>=dados.length-1){
			i=0
		}

		document.getElementById("myText").innerHTML = dados[i];
		var x = dados[i+1];
		element.style.width = x + '%'; 
		element.innerHTML = x * 1  + '%';
		i=i+2
	})

  </script>


